<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="stowell.xmas2016v2.MainActivity"
    android:background="@drawable/snow">

    <RelativeLayout
        android:id="@+id/start_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/xmas_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Merry Christmas, Martin!"
            android:padding="20sp"
            android:textSize="40sp"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="#000000"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

        <Button
            android:id="@+id/present_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/xmas_textview"
            android:text = "Click here for your present!"
            android:padding="20sp"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:layout_centerVertical="true"
            android:background="@drawable/present"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/whoops_rl"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <TextView
            android:id="@+id/whoops_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="\nWhoops, I didn't get this far..."
            android:padding="20sp"
            android:textSize="40sp"
            android:fontFamily="cursive"
            android:textColor="#000000"
            android:textAlignment="center"
            android:textStyle="normal|bold"/>

        <Button
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/whoops_textview"
            android:text = "Back"
            android:padding="20sp"
            android:textSize="30sp"
            android:fontFamily="cursive"
            android:textAlignment="center"
            android:textStyle="normal|bold"
            android:textColor="#ffffff"
            android:background="@drawable/coal"
            />

    </RelativeLayout>
</RelativeLayout>
